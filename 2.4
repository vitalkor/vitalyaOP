using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
namespace ConsoleApp4
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double a = double.Parse(Console.ReadLine());
            for (int i = 1; i < 500; i++)
            {
                for (int j = 1; j < 500; j++)
                {
                    double a1 = (j * i) / 2;
                    double s = Math.Sqrt(Math.Pow(j, 2) + Math.Pow(i, 2));
                    if (s == Math.Truncate(s) && (a1 < a))
                    {
                        Console.WriteLine($"a={i}, b={j}, c={s}, s={a1}");
                    }
                }
            }
        }
    }
}
