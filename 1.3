using System;
namespace Currently
{

    class Program
    {
        static void Main(string[] args)
        {

            int k = 0;
            int c = 0;
            int[] mas = new int[] { 2, 5, 3 };
            for (int i = 0; i < mas.Length; i++)
            {
                if (mas[i] % 2 == 0)
                {
                    c++;
                    break;
                }
                while (mas[i] % 2 != 0)
                {
                    k = k + mas[i];

                    break;
                }

            }
            if (c == 0)
            {
                k = k - mas[0];
                k = k - mas[mas.Length - 1];

            }
            Console.WriteLine(k);
        }
    }
}
